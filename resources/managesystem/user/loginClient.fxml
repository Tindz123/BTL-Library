<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="main_form" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="managesystem.user.LoginClientForm">
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="300.0" />
        <AnchorPane layoutX="300.0" prefHeight="400.0" prefWidth="300.0">
            <children>
                <Label layoutX="89.0" layoutY="43.0" text="Welcome Back!">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="username" layoutX="40.0" layoutY="118.0" onAction="#loginClient" prefHeight="30.0" prefWidth="220.0" promptText="Username" />
                <PasswordField fx:id="password" layoutX="40.0" layoutY="162.0" onAction="#loginClient" prefHeight="30.0" prefWidth="220.0" promptText="Password" />
                <Button fx:id="btnLogin" layoutX="74.0" layoutY="312.0" mnemonicParsing="false" onAction="#openLoginAdmin" prefHeight="20.0" prefWidth="150.0" text="Login as admin" />
                <Button fx:id="btnSignup" layoutX="40.0" layoutY="275.0" mnemonicParsing="false" onAction="#openSignupForm" prefHeight="20.0" prefWidth="220.0" text="Sign up" />
            <Button layoutX="40.0" layoutY="224.0" mnemonicParsing="false" onAction="#loginClient" prefHeight="40.0" prefWidth="220.0" text="Login" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
